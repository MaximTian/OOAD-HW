<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge = "none" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/movie_detail_image"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/movie_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>

                <!--评分部分-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/room_ratingbar"
                        style="@style/RatingBar"
                        android:numStars="5" >
                    </RatingBar>

                    <TextView
                        android:id="@+id/movie_detail_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/movie_detail_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/movie_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#e0e0e0" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#b4b4b4" />

            <View
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#b4b4b4" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ticket_button"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="立即购票"
                android:textColor="#fff"
                android:background="#d25818"
                android:textSize="20sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/movie_content"
                android:layout_below="@id/ticket_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:ellipsize="end"
                android:maxLines="4"
                android:singleLine="false" />

            <RelativeLayout
                android:id="@+id/show_more"
                android:layout_below="@id/movie_content"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="13sp"
                    android:textColor="#999"
                    android:layout_marginRight="40dp"
                    android:text="更多" />

                <ImageView
                    android:id="@+id/spread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_details_more" />

                <ImageView
                    android:id="@+id/shrink_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_shrink_up"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#e0e0e0" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#b4b4b4" />

            <View
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#b4b4b4" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:text="短评"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_gravity="left"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="发短评"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_gravity="right"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cecece" />

        <mainActivity.MyListView
            android:id="@+id/myListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:numColumns="auto_fit"
            android:dividerHeight="0dip"
            android:fadingEdge="none" />

    </LinearLayout>
</ScrollView>