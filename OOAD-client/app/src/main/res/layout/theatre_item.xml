<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theatreName"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="3dp"
        android:textSize="9pt"
        android:textStyle="bold"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TableRow>
            <TextView
                android:id="@+id/theatreAddress"
                android:textColor="#8f8f8f"
                />

            <TextView
                android:id="@+id/theatreDistance"
                android:textColor="#8f8f8f"
                />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/buyTicketButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/ticket_fillet"
            android:textSize="6pt"
            android:textColor="#EEAD0E"
            />

        <TextView
            android:id="@+id/leastTicketPrice"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#EE9A49"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="èµ·"
            android:textColor="#8f8f8f"
            />
    </LinearLayout>
</LinearLayout>